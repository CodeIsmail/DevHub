<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dev_card_color">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:id="@+id/profile_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dev_card_color"
        >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="@dimen/cardview_default_elevation"
            android:translationZ="@dimen/cardview_default_elevation"
            android:layout_margin="16dp"
            android:background="@color/imageborder"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">



            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/github_profile_pic"
                android:layout_width="190dp"
                android:layout_height="190dp"
                app:civ_border_width="4dp"
                tools:src="@drawable/userprofile"
                app:civ_border_color="@color/imageborder"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                 />



            <ImageView
                android:id="@+id/github_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="230dp"
                android:layout_marginStart="230dp"

                android:layout_marginTop="240dp"
                android:src="@drawable/githubmark"

                />

            <TextView
                android:id="@+id/github_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/github_icon"
                android:layout_toEndOf="@+id/github_icon"
                android:layout_marginTop="245dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                tools:text="HDMNDNMNM"
                android:textColor="@android:color/black"
                />

            <ImageView
                android:id="@+id/github_profile_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="180dp"
                android:layout_marginStart="180dp"
                android:src="@drawable/userprofile"
                android:layout_alignBottom="@+id/github_user_profile"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/github_user_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/github_profile_icon"
                android:layout_toEndOf="@+id/github_profile_icon"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_marginTop="290dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="16dp"
                tools:text="knbfskdnsdkjdslksd"
                android:textColor="@android:color/black"/>


        </RelativeLayout>

        <ImageButton
            android:id="@+id/share_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            app:srcCompat="@drawable/sharebutton"
            android:elevation="8dp"
            android:background="@drawable/ripple_effect"
            />

    </RelativeLayout>
</ScrollView>